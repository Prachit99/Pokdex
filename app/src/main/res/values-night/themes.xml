<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/title</item>
        <item name="android:textColorPrimary">@color/night_textColor</item>
        <item name="android:windowBackground">@color/night_bg</item>
    </style>

    <style name="sub_title_style" parent="title_style">
        <item name="android:textColor">@color/night_textColor</item>
    </style>

    <style name="pokemon_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/galindo</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/night_textColor</item>

    </style>

    <style name="input_box_style">
        <item name="android:textColorHint">@color/night_textColor</item>
        <item name="hintTextColor">@color/night_textColor</item>
    </style>

</resources>