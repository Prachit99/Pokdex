<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:windowBackground">@color/bg</item>
    </style>

    <style name="Theme.Pokedex" parent="Base.Theme.Pokedex" />

    <style name="title_style">
        <item name="android:fontFamily">@font/galindo</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_title_style" parent="title_style">
        <item name="android:textSize">20sp</item>

    </style>

    <style name="pokemon_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/galindo</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>

    </style>

    <style name="button_Style">
        <item name="android:backgroundTint">@color/title</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="input_box_style">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="colorOutline">@color/textColor</item>
        <item name="hintTextColor">@color/textColor</item>
    </style>
</resources>